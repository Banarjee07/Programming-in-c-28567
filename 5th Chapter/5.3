#include<stdio.h>

void add();
void sub();
void mul();
void division();

int x, y, result;

int main() {
    char ch;
    
    printf("\nEnter the value of x & y: ");
    scanf("%d %d", &x, &y);
    
    printf("\nPlease Enter Your Choice (1, 2, 3, 4): ");
    scanf(" %c", &ch); // Note the space before %c to consume any whitespace characters (like newline) left in the input buffer
    
    switch (ch) {
        case '1':
            add();
            break;
        case '2':
            sub();
            break;
        case '3':
            mul();
            break;
        case '4':
            division();
            break;
        default:
            printf("Invalid Choice!\n");
            break;
    }
    
    return 0;
}

void add() {
    result = x + y;
    printf("The summation of x & y is = %d\n", result);
}

void sub() {
    result = x - y;
    printf("The subtraction of x & y is = %d\n", result);
}

void mul() {
    result = x * y;
    printf("The multiplication of x & y is = %d\n", result);
}

void division() {
    if (y != 0) {
        result = x / y;
        printf("The division of x & y is = %d\n", result);
    } else {
        printf("Error: Division by zero!\n");
    }
}


