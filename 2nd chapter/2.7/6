#include <stdio.h>
int main() {
	int basic, da, ta,gross_salary ;
	printf("Enter basic salary : ");
	scanf("%d", &basic);
	da = (10 * basic) / 100;
	ta = (12 * basic) / 100;
	gross_salary = basic + da + ta;
	printf("\nGross salary : %d", gross_salary);
return 0;
}


Output:
Enter basic salary : 28000

Gross salary : 34160
